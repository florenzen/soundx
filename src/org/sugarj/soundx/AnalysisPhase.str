		 	 	sx-env-get-toplevel-declarations;
		 	 	sx-debug(|"list of toplevel declarations");
		 	 	sx-list-to-toplevel-decls => toplevel-decs;
		 	 	sx-context-analysis
		 	 else
		 	 	id
