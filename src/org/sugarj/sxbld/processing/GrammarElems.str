    			<sxbld-analyze-fail(|"`sx-atoms' requires a sort as right-hand side")> symbol
    		end
    	else
    		![]
    	end
    		//<sx-debug(|"Found the following atom set symbol ")> atom-set-symbol;
    		
    // 		if !atom-set-sort; ?fun(unquoted(sort-name)); <is-string> sort-name then
    // 			<sxbld-env-add-atom-sort> rhs-name;
    // 			<sxbld-prefix-string-base-lang> sort-name => prefixed-sort-name;
    // 			![prod([symbol, lit("=/="), symbol], sort("SXJudgement"),
    // 	        	attrs([<sx-sdf2-cons-attribute> "SXNeq"]))] => grms-neq;
    // 	        ![prod([symbol, lit("notin"), sort(prefixed-sort-name)], sort("SXJudgement"),
    // 	        	attrs([<sx-sdf2-cons-attribute> "SXFreshIn"])),
    // 	          prod([symbol, lit("in"), sort(prefixed-sort-name)], sort("SXJudgement"),
    // 	          	attrs([<sx-sdf2-cons-attribute> "SXContainedIn"]))] => grms-fresh-in;
    // 	        // AtomSet "U" AtomSet  -> AtomSet {cons("SXAtomsUnion"), left}
    // 	        // "{" SXAtomsEnum "}"  -> AtomSet {cons("SXAtomsEnum")}
    // 	        // AtomSet "\\" AtomSet -> AtomSet {cons("SXAtomsDiff"), left}
    // 	        // "(" AtomSet ")"      -> AtomSet {bracket}
    // 	        //
    // 	        //                      -> SXAtomsEnum {cons("SXAtomsEnumNone")}
    // 	        // Atom SXAtomsList     -> SXAtomsEnum {cons("SXAtomsEnumOne")}
    // 	        //                      -> SXAtomsList {cons("SXAtomsListNil")}
    // 	        // "," Atom SXAtomsList -> SXAtomsList {cons("SXAtomsListCons")}
    // 	        // TODO: precedences, associativity, parentheses
    // 	        !sort(prefixed-sort-name) => atom-set;
    // 	        !symbol => atom;
    // 	        ![prod([atom-set, lit("U"), atom-set], atom-set,
    // 	        	attrs([<sx-sdf2-cons-attribute> "SXAtomsUnion", assoc(left())])),
    // 	          prod([lit("{"), sort("SXAtomsEnum"), lit("}")], atom-set,
    // 	        	attrs([<sx-sdf2-cons-attribute> "SXAtomsEnum"])),
    // 	          prod([atom-set, lit("\\\\"), atom-set], atom-set,
    // 	        	attrs([<sx-sdf2-cons-attribute> "SXAtomsDiff", assoc(left())])),
    // 	          prod([lit("("), atom-set, lit(")")], atom-set,
    // 	          	attrs([bracket()])),
    // 	          prod([], sort("SXAtomsEnum"),
    // 	        	attrs([<sx-sdf2-cons-attribute> "SXAtomsEnumNone"])),
    // 	          prod([atom, sort("SXAtomsList")], sort("SXAtomsEnum"),
    // 	        	attrs([<sx-sdf2-cons-attribute> "SXAtomsEnumOne"])),
    // 	          prod([], sort("SXAtomsList"),
